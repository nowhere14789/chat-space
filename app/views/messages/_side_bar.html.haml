.side-bar
  .side-bar__user-name
    .side-bar__user-name__name
      .side-bar__user-name__name__left
        = current_user.name
      .side-bar__user-name__name__right
        = link_to new_group_path do
          = icon('fas', 'edit' ,class:"side-bar__user-name__name__right__btn")
        %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-bar__user-name__name__right__setting-btn')
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__group
        = link_to group_messages_path(group) do
          .side-bar__groups__group__name
            = group.name
          .side-bar__groups__group__message
            = group.show_last_message
