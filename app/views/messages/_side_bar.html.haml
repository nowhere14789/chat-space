.side-bar
  .side-bar__user-name
    .side-bar__user-name__name
      .side-bar__user-name__name__left
        = current_user.name
      .side-bar__user-name__name__right
        = link_to "/users/sign_in", class: "side-bar__user-name__name__right__new-btn" do
          = icon('fas', 'edit' ,class:"side-bar__user-name__name__right__btn")
        %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-bar__user-name__name__right__setting-btn')
  .side-bar__group
    .side-bar__group__name
      groupname
    .side-bar__group__message
      message
